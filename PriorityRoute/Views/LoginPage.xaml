<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PriorityRoute.LoginPage" BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout Padding="40,0,40,0">
            <Image Source="FullSizeRender"/>

            <Label Text="Adding efficiency, subtracting costs." TextColor="#4096FD" HorizontalOptions="Center" FontSize="20" Padding="0,0,0,40"/>

            <Label x:Name="Lbl_Username" Text="Please Enter Your Username" TextColor="White" FontSize="18" />
            <Entry x:Name="Entr_Username" Placeholder="Username" PlaceholderColor="White" TextColor="White"/>
            <Label x:Name="Lbl_Password" Text="Please Enter Your Password" TextColor="White" FontSize="18" />
            <Entry IsPassword="True" x:Name="Entr_Password" Placeholder="Password" PlaceholderColor="White" TextColor="White"/>

            <Button Text="Login" Clicked="LoginClicked" TextColor="Black" VerticalOptions="EndAndExpand" BackgroundColor="#4096FD"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
